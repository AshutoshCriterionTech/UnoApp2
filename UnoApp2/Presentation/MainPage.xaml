<Page x:Class="UnoApp2.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp2.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      >
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#003a70" Offset="0.0"/>
            <GradientStop Color="#0072ce" Offset="1.0"/>
        </LinearGradientBrush>
    </Page.Background>
    <ScrollViewer IsTabStop="True">

        <Grid utu:SafeArea.Insets="VisibleBounds">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Login form -->
            <StackPanel x:Name="LoginFormPanel"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

                <!--<TextBlock x:Uid="WelcomeText" FontSize="24" />-->


                <Image Source="/Assets/TempImages/Logo.png"
               Width="200"
               Height="200"
               HorizontalAlignment="Center" />

                <TextBox x:Name="UsernameTextBox"
                 x:Uid="UsernameTextBox"
                 Width="300"
                 KeyDown="TextBox_KeyDown"
                 HorizontalAlignment="Center" />

                

                <TextBox x:Name="PasswordTextBox"
                 x:Uid="PasswordTextBox"
                 Width="300"
                 KeyDown="TextBox_KeyDown"
                 HorizontalAlignment="Center" />

                <Button x:Name="LoginButton"
                        x:Uid="LoginButton"
                    Width="300"
                    Click="LoginButton_Click"
                    HorizontalAlignment="Center" />

                <ToggleSwitch x:Name="LanguageToggle"
              Header="Hindi / English"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Toggled="LanguageToggle_Toggled"/>





            </StackPanel>

            <!-- Loader overlay -->
            <Grid x:Name="LoaderOverlay"
          Background="#80000000"
          Visibility="Collapsed"
          Grid.RowSpan="2">
                <ProgressRing IsActive="True"
                      Width="60"
                      Height="60"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            </Grid>
        </Grid>


    </ScrollViewer>
</Page>
